<?xml version="1.0"?>
<config>
    <modules>
        <Loewenstark_Sample>
            <version>1.0.0.1</version>
        </Loewenstark_Sample>
    </modules>
    <global>
        <models>
            <sample>
                <class>Loewenstark_Sample_Model</class>
            </sample>
        </models>
        <blocks>
            <sample>
                <class>Loewenstark_Sample_Block</class>
            </sample>
        </blocks>
        <helpers>
            <sample>
                <class>Loewenstark_Sample_Helper</class>
            </sample>
        </helpers>
        <events>
            <core_layout_update_updates_get_after>
                <observers>
                    <add_layout_xml>
                        <type>singleton</type>
                        <class>sample/observer</class>
                        <method>addLayoutXml</method>
                    </add_layout_xml>
                </observers>
            </core_layout_update_updates_get_after>
        </events>
        <resources>
            <sample_setup>
                <setup>
                    <module>Loewenstark_Sample</module>
                    <class>Loewenstark_Sample_Model_Resource_Setup</class>
                </setup>
            </sample_setup>
        </resources>
    </global>
</config>